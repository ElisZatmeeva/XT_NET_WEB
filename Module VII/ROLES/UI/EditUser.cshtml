@using Epam.Users_and_Award.Entities
@using Epam.Users_and_Award.Common;
@using Epam.Users_and_User.Common;
@using Epam.User_and_Award.BLL;


@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Edit User";

    var name = "";
    var year = "";
    var month = "";
    var day = "";
    var age = "";
    var userId = "";


    if (!IsPost)
    {
        if (!Request.QueryString["ID"].IsEmpty() && Request.QueryString["ID"].IsInt())
        {
            userId = Request.QueryString["ID"];
            var userLogic = DependencyResolverUser.UserLogic;
            var row = userLogic.GetUserById(userId.AsInt());


            if (row != null)
            {
                name = row.Name;
                year = row.DateOfBirth.Year.ToString();
                month = row.DateOfBirth.Month.ToString();
                day = row.DateOfBirth.Day.ToString();
                age = row.Age.ToString();

            }
            else
            {
                Validation.AddFormError("No user was selected.");
            }
        }
        else
        {
            Validation.AddFormError("No user was selected.");
        }
    }

    if (IsPost)
    {
        Validation.RequireField("name", "You must enter a name");
        Validation.RequireField("year", "You haven't entered a year");
        Validation.RequireField("month", "Month is required");
        Validation.RequireField("day", "Day is required");
        Validation.RequireField("age", "Age is required");

        name = Request.Form["Name"];
        year = Request.Form["year"];
        month = Request.Form["month"];
        day = Request.Form["day"];
        age = Request.Form["Age"];
        userId = Request.Form["userId"];

        if (Validation.IsValid())
        {
            Uri theRealURL = new Uri(HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + HttpContext.Current.Request.RawUrl);

            string IdFromUrl = HttpUtility.ParseQueryString(theRealURL.Query).Get("Id");

            var userLogicUpdate = DependencyResolverUser.UserLogic;

            userLogicUpdate.Update(IdFromUrl.AsInt(), name, age.AsInt(), new DateTime(year.AsInt(), month.AsInt(), day.AsInt()));
            Response.Redirect("~/HomePage");


        }
    }
}

    <h2>Edit a User</h2>
    @Html.ValidationSummary()
    <form method="post">
        <fieldset>
            <legend>User Information</legend>

            <p>
                <label for="name">Name:</label>
                <input type="text" name="name" value="@name" />

            </p>

            <p>
                <label for="year">Year:</label>
                <input type="text" name="year" value="@year" />

            </p>

            <p>
                <label for="month">Month:</label>
                <input type="text" name="month" value="@month" />

            </p>

            <p>
                <label for="day">Day:</label>
                <input type="text" name="day" value="@day" />

            </p>

            <p>
                <label for="age">Age:</label>
                <input type="text" name="age" value="@age" />

            </p>


            <input type="hidden" name="userId" value="@userId" />

            <p><input type="submit" name="buttonSubmit" value="Submit Changes" /></p>
        </fieldset>
    </form>
    <p><a href="~/HomePage">Return to Users_and_Awards listing</a></p>
