@using Epam.Users_and_Award.Entities
@using Epam.Users_and_Award.Common;
@using Epam.Users_and_User.Common;
@using Epam.User_and_Award.BLL;


@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "Edit Award";

    var title = "";
    var awardId = "";


    if (!IsPost)
    {
        if (!Request.QueryString["ID"].IsEmpty() && Request.QueryString["ID"].IsInt())
        {
            awardId = Request.QueryString["ID"];
            var awardLogic = DependencyResolverAward.AwardLogic;
            var row = awardLogic.GetAwardById(awardId.AsInt());


            if (row != null)
            {
                title = row.Title.ToString();

            }
            else
            {
                Validation.AddFormError("No award was selected.");
            }
        }
        else
        {
            Validation.AddFormError("No award was selected.");
        }
    }

    if (IsPost)
    {
        Validation.RequireField("title", "You must enter a title");


        title = Request.Form["title"];
        awardId = Request.Form["awardId"];

        if (Validation.IsValid())
        {
            Uri theRealURL = new Uri(HttpContext.Current.Request.Url.Scheme + "://" + HttpContext.Current.Request.Url.Authority + HttpContext.Current.Request.RawUrl);

            string IdFromUrl = HttpUtility.ParseQueryString(theRealURL.Query).Get("Id");

            var awardLogicUpdate = DependencyResolverAward.AwardLogic;

            awardLogicUpdate.Update(IdFromUrl.AsInt(), title);
            Response.Redirect("~/index");


        }
    }
}
    <h1>Edit a Award</h1>
    @Html.ValidationSummary()
    <form method="post">
        <fieldset>
            <legend>Award Information</legend>

            <p>
                <label for="title">Title:</label>
                <input type="text" name="title" value="@title" />

            </p>

            <input type="hidden" name="awardId" value="@awardId" />

            <p><input type="submit" name="buttonSubmit" value="Submit Changes" /></p>
        </fieldset>
    </form>
    <p><a href="~/index">Return to Users_and_Awards listing</a></p>